<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <!-- Logo de la aplicaciÃ³n -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/cafemain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <!-- Mensaje de Bienvenida -->
    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido, Usuario"
        android:textColor="@color/textColor"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/buttonShowProducts"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_show_products"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/buttonAddProduct"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_add_product"
            android:backgroundTint="@color/secondaryColor"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/buttonDeleteProduct"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_delete_product"
            android:backgroundTint="@color/primaryVariant"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_logout"
            android:backgroundTint="@color/errorColor"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"/>

        <Button
            android:id="@+id/buttonEditProfile"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_edit_profile"
            android:backgroundTint="@color/accentColor"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
